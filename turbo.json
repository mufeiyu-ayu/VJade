{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**"],
      "cache": true
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": true
    },
    "build:dts": {
      "dependsOn": ["^build:dts"],
      "outputs": ["dist/**","temp/**"],
      "cache": true
    },
    "build:all": {
      "dependsOn": ["^build:all"],
      "outputs": ["dist/**","temp/**"],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tsconfig.json"
      ]
    },
    "format:check": {
      "inputs": [
        "src/**/*.{ts,tsx,.vue}"
      ]
    }
  }
}
