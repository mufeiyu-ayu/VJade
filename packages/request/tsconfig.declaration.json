{
  "extends": "@ayu-mu/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "temp/src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__/*"]
}
