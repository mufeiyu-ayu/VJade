{
  "extends": "@ayu-mu/tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "temp/src",
    "stripInternal": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__/*"]
}
